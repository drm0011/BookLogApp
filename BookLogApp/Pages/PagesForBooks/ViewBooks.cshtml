@page
@model ViewBooksModel

<div class="container mt-5">
    <h2 class="mb-4">Book List</h2>

    <ul class="list-unstyled">
        @foreach (DomainModelsLayer.Book book in Model.Books)
        {
            <li class="mb-3 pb-3 border-bottom">
                <h3><a href="./UpdateBook/@book.ID" class="text-decoration-none">@book.Title</a></h3>
                <p><strong>Author:</strong> @book.Author</p>
                <p><strong>Summary:</strong> @book.Summary</p>
                <p><strong>ISBN:</strong> @book.ISBN</p>
                <p>
                    <strong>Genre: </strong>
                    @for (int i = 0; i < book.Genres.Count; i++)
                    {
                        @book.Genres[i].Name
                        if (i < book.Genres.Count - 1)
                        {
                            @:|
                        }
                    }
                </p>
                <a href="./DeleteBook/@book.ID" class="btn btn-danger">Delete @book.Title</a> 
                <a href="/CreateEntry/@book.ID" class="btn btn-primary">Create entry</a>
            </li>
        }
    </ul>
</div>
