@page
@model BookLogApp.Pages.PagesForBooks.AddBookModel
@{
    <h2>Add Book</h2>

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label for="Title">Title:</label>
            <input id="Title" name="Title" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div>
            <label for="Author">Author:</label>
            <input id="Author" name="Author" asp-for="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div>
            <label for="Summary">Summary:</label>
            <textarea id="Summary" name="Summary" asp-for="Summary"></textarea>
            <span asp-validation-for="Summary" class="text-danger"></span>
        </div>

        <div>
            <label for="ISBN">ISBN:</label>
            <input id="ISBN" name="ISBN" asp-for="ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>


        <button type="submit">Add Book</button>
    </form>
}
