@page
@model BookLogApp.Pages.PagesForGenres.ViewGenresModel

<div class="container mt-4">
    <h2 class="mb-3">Genre List</h2>

    <ul class="list-group">
        @foreach (DomainModelsLayer.Genre genre in Model.Genres)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="./UpdateGenre/@genre.ID" class="text-decoration-none">@genre.Name</a>
                <a href="./DeleteGenre/@genre.ID" class="btn btn-danger">Delete</a>
            </li>
        }
    </ul>
</div>
